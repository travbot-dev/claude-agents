# === API Keys ===
# Anthropic (required - or use claude auth login)
# ANTHROPIC_API_KEY=sk-ant-...

# Today App (for todo management)
TODAY_API_TOKEN=your_today_api_token
TODAY_API_URL=https://api.today.app

# AgentMail (for sending emails)
# Get your API key at https://agentmail.to
AGENTMAIL_API_KEY=your_agentmail_api_key

# Your email address (for agents to know where to send reports)
EMAIL_TO=you@yourdomain.com

# === Social Tracker ===
# Bluesky (public API, no auth needed — just your handles)
BLUESKY_HANDLE_PERSONAL=travis-code.bsky.social
BLUESKY_HANDLE_CONFERENCE=blastoffrails.bsky.social

# X/Twitter (OAuth 1.0a — get keys at https://developer.x.com)
# Each account has its own developer app with separate consumer + access keys
# Personal account (@travis_code)
X_CONSUMER_KEY_PERSONAL=your_personal_consumer_key
X_CONSUMER_SECRET_PERSONAL=your_personal_consumer_secret
X_ACCESS_TOKEN_PERSONAL=your_personal_access_token
X_ACCESS_TOKEN_SECRET_PERSONAL=your_personal_access_token_secret
# Conference account (@blastoffrails)
X_CONSUMER_KEY_CONFERENCE=your_conference_consumer_key
X_CONSUMER_SECRET_CONFERENCE=your_conference_consumer_secret
X_ACCESS_TOKEN_CONFERENCE=your_conference_access_token
X_ACCESS_TOKEN_SECRET_CONFERENCE=your_conference_access_token_secret

# Conference details (used in social tracker analysis)
CONFERENCE_NAME="Blastoff Rails 2026"
CONFERENCE_DATE="2026-06-11"
