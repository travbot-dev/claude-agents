{
  "mcpServers": {
    "today-api": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-proxy", "--endpoint", "${TODAY_API_URL}/mcp"],
      "env": {
        "API_TOKEN": "${TODAY_API_TOKEN}"
      }
    },
    "agentmail": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "agentmail-mcp"],
      "env": {
        "AGENTMAIL_API_KEY": "${AGENTMAIL_API_KEY}"
      }
    }
  }
}
